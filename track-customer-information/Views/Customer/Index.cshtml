@model CustomerListViewModel

@{
    ViewData["Title"] = "Customer List";
}

<body>
    <form asp-action="Index" method="get">
        <div class="form-group">
            <label for="filterType">Filter By:</label>
            <select id="filterType" name="filterType" class="form-control">
                <option value="Name">Name</option>
                <option value="VATNumber">VAT Number</option>
            </select>
        </div>
        <div class="form-group">
            <label for="filterValue">Value:</label>
            <input type="text" id="filterValue" name="filterValue" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <div class="container-lg">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Telephone Number</th>
                    <th>Contact Person Name</th>
                    <th>Contact Person Email</th>
                    <th>VAT Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customerModel in Model.Customers)
                {
                    <tr>
                        <td>@customerModel.Name</td>
                        <td>@customerModel.Address</td>
                        <td>@customerModel.TelephoneNumber</td>
                        <td>@customerModel.ContactPersonName</td>
                        <td>@customerModel.ContactPersonEmail</td>
                        <td>@customerModel.VATNumber</td>

                        <td class="icon-container">
                            <a asp-action="Edit" asp-route-id="@customerModel.CustomerID">
                                <button class="btn btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </a>

                            <form asp-action="Delete" asp-route-id="@customerModel.CustomerID" method="post" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="container">
        <p>Page @Model.Pagination.PageNumber of @Model.Pagination.TotalPages</p>

        <a asp-action="Index" asp-route-pageNumber="@(Model.Pagination.PageNumber - 1)" class="btn btn-primary @(Model.Pagination.HasPreviousPage ? "" : "disabled")">Previous</a>
        <a asp-action="Index" asp-route-pageNumber="@(Model.Pagination.PageNumber + 1)" class="btn btn-primary @(Model.Pagination.HasNextPage ? "" : "disabled")">Next</a>
    </div>

</body>
