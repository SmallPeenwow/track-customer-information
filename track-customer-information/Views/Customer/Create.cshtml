@model CustomerModel

<div class="container">

    <h2 class="mb-3 mt-5">Create New Customer</h2>

    <form id="createCustomerForm" class="edit-form" asp-action="CreateCustomer" method="post" onsubmit="return confirm('Are you sure you want to create this customer?');">

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TelephoneNumber"></label>
            <input asp-for="TelephoneNumber" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ContactPersonName"></label>
            <input asp-for="ContactPersonName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ContactPersonEmail"></label>
            <input asp-for="ContactPersonEmail" class="form-control" />
            <span asp-validation-for="ContactPersonEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="VATNumber"></label>
            <input asp-for="VATNumber" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Create</button>

    </form>

</div>

<script>
    $(document).ready(function () {
        $('#createCustomerForm').on('submit', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: form.serialize(),
                success: function (data) {
                    if (data.redirect) {
                        window.location.href = '/';
                    } else {
                        $('#dynamicContent').html(data);
                    }
                }
            });
        });
    });
</script>